\ темброблок
\ ATmega8
\ +DEBUG3

[F] DECIMAL [P]

8000000 == F_CPU

:: LCD_I2C ;;
0x40 == LCD_Addr
REQUIRE LCD_CLRSCR      lib/lcd/lcd.spf          \ библиотеки LCD
REQUIRE LCD_CHAR        lib/lcd/definechar.spf   \ определение пользовательских символов
REQUIRE BIG_SETUP       lib/lcd/big.spf

C" 0123" == "0123"
C" 4567" == "4567"
C" 89"   == "89"

: PRINT ( cstr -- )
  PAGE
  COUNTP TYPEP
  1000 MS
;

: Print_Big
  "0123" PRINT
  "4567" PRINT
  "89"   PRINT
;

: MAIN
  I2C_INIT
  LCD_DISP_ON  LCD_INIT   \ инициализация индикатора

  PAGE
  1 1 AT ." 13"

  BIG_SETUP BIG_LETTERS
  BEGIN
    Print_Big
  AGAIN
;
