: SLASH  ( -- )   [ CHAR / ] LITERAL HOLD ;
: 2D  ( 2x -- 2y )
  NIP NIP 0 # #
;

: FORMAT-SHORT-DATE ( -- a u )
  0 0 <#
    GET-YEAR 2D SLASH
    GET-MONTH 2D SLASH
    GET-DAY 2D
  #>
;

